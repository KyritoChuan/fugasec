---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import Image from "astro/components/Image.astro";
import LogoPrincipal from "assets/logo.png";

const menuitems = [
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
  {
    title: "Pro Version",
    badge: true,
    path: "https://astroship-pro.web3templates.com/",
  },
];
---

<!-- sticky top-0 z-10 bg-white --><!--  23262f -->
<div
  class:list={[
    "sticky top-0 z-10 py-[1px] px-5 sm:pl-[104px] lg:pr-[104px] bg-[#f6f9fc] w-full border-b border-[#e6ebf4]",
  ]}
>
  <header>
    <div class="flex flex-col lg:flex-row justify-between items-center my-4">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <Image
            class={"absolute bottom-4 max-w-8"}
            src={LogoPrincipal}
            alt="logo de fuga y gasfiteria"
          />
          <a href="/" class="text-lg ml-9"
            ><span class="font-bold text-slate-800">Fuga</span><span
              class="text-slate-500">sec</span
            >
          </a>
          <div class="flex justify-center lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-600" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                <>
                  <li>
                    {/* text-gray-600 hover:text-gray-900 */}
                    {/* text-white hover:text-zinc-300 */}
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900"
                    >
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                </>
              ))
            }
          </ul>
          <div class="lg:hidden flex items-center mt-3 gap-4">
            <Link href="#" style="muted" block size="md">Log in</Link>
            <Link href="#" size="md" block>Sign up</Link>
          </div>
        </MenuItems>
      </Astronav>
    </div>
  </header>
</div>
