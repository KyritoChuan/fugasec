---
import { Image } from "astro:assets";

interface Props {
    image?: ImageMetadata;
    title: string;
}

const { image, title } = Astro.props;
---

<div
    class="w-full bg-white flex flex-col gap-2 border border-[#E3EDF7] rounded-2xl shadow-[0px_5px_15px_-2px_rgba(96,128,159,0.20)]"
>
    <div class="flex flex-col">
        {
            image && (
                <div class="px-4 pt-4">
                    <Image
                        class={"rounded-lg w-auto sm:w-[360px]"}
                        src={image}
                        alt={"equipment for gas"}
                    />
                </div>
            )
        }
        <div
            class:list={[
                {
                    "border-b-[1px] border-b-[#E3EDF7] py-2": image,
                },
                "flex justify-between items-center px-4",
            ]}
        >
            <h2
                class={`text-[20px] leading-6 text-[#1269B0] py-2 font-semibold`}
            >
                {title}
            </h2>
        </div>

        <div class="flex flex-col gap-4 p-4 pb-6 text-slate-600">
            <slot />
        </div>
    </div>
